#! /bin/bash

if test $1 -lt 40
then {
    OPTIONS="install --without-mpi --prefix=`pwd`/../boost"
}
else {
    OPTIONS="install --layout=versioned --without-mpi --prefix=`pwd`/../boost"
}
fi

if test -e /proc/
then {
    ./bjam -j`grep -c ^processor /proc/cpuinfo` toolset=gcc debug link=shared $OPTIONS \
    && ./bjam -j`grep -c ^processor /proc/cpuinfo` toolset=gcc release link=shared $OPTIONS
}
else {
    ./bjam -j`sysctl -n hw.ncpu` toolset=darwin architecture=x86 address-model=32_64 pch=off debug release $OPTIONS
}
fi
