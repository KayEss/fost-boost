#! /bin/bash
cd `dirname $0`
set -ex

if test -z $1
then {
    export MAJOR=62
} else {
    export MAJOR=$1
}
fi

if test -z $2
then {
    export MINOR=0
} else {
    export MINOR=$2
}
fi

export VERSION=1_$MAJOR\_$MINOR
echo Using Boost_$VERSION

./download 1 $MAJOR $MINOR
./bootstrap 1 $MAJOR $MINOR

if test -e /proc/
then {
    ./compile 1 $MAJOR $MINOR gcc release
    ./compile 1 $MAJOR $MINOR gcc debug
}
fi
./compile 1 $MAJOR $MINOR clang release
./compile 1 $MAJOR $MINOR clang debug
